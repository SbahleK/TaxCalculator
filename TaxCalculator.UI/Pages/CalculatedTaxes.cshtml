@page
@model CalculatedTaxesModel
@{
    ViewData["Title"] = "Calculated Taxes";
}
<div class="text-center">
    <h1 class="display-4"
        style="font: Arial, Helvetica, sans-serif; margin-bottom: 5%">
        Previously Calculated Tax Incomes
    </h1>

<section>
    <div class="tbl-header">
        <table cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>Postal Code</th>
                    <th>Annual Income</th>
                    <th>Tax</th>
                    <th>Date</th>
                </tr>
            </thead>
        </table>
    </div>
    <div >
        <table cellpadding="0" cellspacing="0" border="0">
            <tbody>
                @foreach (var item in Model.Taxes)
                {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.PostalCode)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.AnnualIncome)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.TaxCharged)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.CalculatedOn)
                        </td>
                    </tr>
                }
             </tbody>
        </table>
    </div>
</section>
</div>